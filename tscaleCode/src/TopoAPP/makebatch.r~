#========================================================================
#		make batch file
#========================================================================

batchfile=paste(spath,'/batch.txt',sep='')
file.create(batchfile)

sims=list.files(path=paste(spath,'/result/',sep=''), pattern='S',full.names=T)
write(paste('cd ',exePath,sep=''),file=batchfile,append=T)
for(i in 1:npoints){
if(i<npoints){write(paste(exe, sims[i], '&',sep=' '),file=batchfile,append=T)}
if(i==npoints){write(paste(exe, sims[i],sep=' '),file=batchfile,append=T)}
}

system(paste('chmod 777 ',spath,'/batch.txt',sep=''))

